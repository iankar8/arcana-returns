# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database
DATABASE_PATH=./data/arcana.db

# JWT Signing (Ed25519)
# Generate with: openssl genpkey -algorithm ed25519 -out private.pem
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem
JWT_ISSUER=arcana
JWT_EXPIRY_SECONDS=900

# API Keys (comma-separated merchant_id:api_key pairs)
API_KEYS=merchant_test:sk_test_12345

# Shopify
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_SCOPES=read_orders,write_orders,read_products

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Storage
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
