{
  "name": "arcana-returns",
  "version": "0.1.0",
  "description": "Arcana Returns API - Agentic returns with audit-grade logging",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "build": "tsc",
    "start": "node dist/server/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "cli": "tsx src/cli/index.ts",
    "db:init": "tsx src/db/init.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "deploy": "fly deploy",
    "deploy:setup": "fly launch --no-deploy && fly volumes create arcana_data --region sjc --size 1",
    "logs": "fly logs",
    "ssh": "fly ssh console",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docs:example": "node examples/complete-return-flow.js",
    "docs:serve": "echo 'Install: npm install -g @redocly/cli' && redocly preview-docs docs/openapi.yaml",
    "docs:build": "redocly build-docs docs/openapi.yaml --output docs/api-docs.html"
  },
  "keywords": ["returns", "api", "audit", "shopify"],
  "author": "Arcana",
  "license": "PROPRIETARY",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@shopify/shopify-api": "^10.0.0",
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "jose": "^5.2.3",
    "pdf-parse": "^1.1.1",
    "pino": "^8.19.0",
    "pino-pretty": "^11.0.0",
    "stripe": "^14.21.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.30",
    "@types/pdf-parse": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
